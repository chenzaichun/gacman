<header class="article-info clearfix">
    <h1 itemprop="name">
        <% if(item.link) { %>
        <a title="<%= item.title %>"><%= item.title %></a><% } else { %>
        <a title="<%= item.title %>" itemprop="url"><%= item.title %></a><% } %>
    </h1>
    <% if (page.layout!='page') { %>
    <p class="article-author">By
        <% if(item.author) { %>
        <a href="<%= config.url %>/about" title="<%= config.author %>" target="_blank" itemprop="author"><%= item.author %></a>
        <% } else { %>
        <a href="<%= config.url %>/about" title="<%= config.author %>" target="_blank" itemprop="author"><%= config.author %></a>
        <% } %>
    <p class="article-time">
        <time datetime="<%= date_xml(item.date) %>" itemprop="datePublished"> <%= __('datepublished') %> <%= item.date.format(config.date_format) %></time>
        <% } %>
    </p>
</header>
