<div class="clearfix"></div>
<% if (page.layout!='page') { %>
<div class="post-copyright">
    <p>♦ 本文固定连接：<a href="<%= item.permalink %>"><%= item.permalink %></a></p>
    <p>♦ 转载请注明：<% if (item.author) { %><a href="<%= config.url %>/about"><%= item.author %></a><% } else { %> <a href="<%= config.url %>/about"><%= config.author %></a> <% } %> <%= item.date.format(config.date_format)%>发布于 <a href="<%= config.url%>"><%= config.title %></a></p>
</div>
<% } %>

<footer class="article-footer clearfix">
    <%- partial('catetags') %>
    <% if (!index){ %>
    <div class="article-share" id="share">
        <% if(theme.jiathis.enable){ %>
        <div class="share-jiathis">
            <%- partial('jiathis') %>
        </div>
        <% } else if(theme.baidu_share.enable){ %>
        <div class="share-baidu">
            <%- partial('baidu_share') %>
        </div>
        <% } else { %>
        <div data-url="<%- item.permalink %>" data-title="<% if (item.title){ %><%= item.title %> | <% } %><%= config.title %>" data-tsina="<%= theme.author.tsina %>" class="share clearfix">
        </div>
        <% } %>
    </div>
    <% } %>
    <% if (index){ %>
    <div class="comments-count">
        <% if((config.disqus_shortname || theme.disqus_shortname) && !theme.duoshuo_shortname) { %>
        <span></span>
        <a href="<%- config.root %><%- item.path %>#disqus_thread" class="comments-count-link">Comments</a>
        <% } else if(theme.duoshuo_shortname) { %>
        <span></span>
        <a href="<%- item.permalink %>#comments" class="ds-thread-count comments-count-link" data-thread-key="<%- item.path %>" data-count-type="comments">&nbsp;</a>
        <% } %>
    </div>
    <% } %>
</footer>

